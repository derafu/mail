{# layouts/default.html.twig #}
{% extends 'base.html.twig' %}

{% block title %}Derafu: Mail - Elegant orchestration of email communications for PHP{% endblock %}

{% block body %}
    {% block header %}
        {% include 'components/header.html.twig' %}
    {% endblock %}

    {% block main %}
        <div class="container">
            <div class="row">
                <main class="col-md-9">
                    {% block content %}{% endblock %}
                </main>
                <div class="col-md-3 py-4">
                    <div class="list-group mb-4">
                        <li class="list-group-item d-flex justify-content-between align-items-start">
                            <div class="ms-2 me-auto">
                                <div class="fw-bold">Package Info</div>
                                <span class="smal text-muted">
                                    <a href="https://github.com/derafu/mail" target="_blank" class="link-secondary text-decoration-none">
                                        <i class="fa-brands fa-github"></i>
                                        derafu/mail
                                    </a>
                                </span>
                                <div class="my-2">
                                    <img src="https://img.shields.io/github/stars/derafu/mail" alt="GitHub Repo stars">
                                    <img src="https://img.shields.io/github/forks/derafu/mail" alt="GitHub forks">
                                </div>
                            </div>
                        </li>
                        <a href="/" class="list-group-item list-group-item-action {% if request.uri.path == '/' %}active{% endif %}">
                            README
                        </a>
                    </div>
                    <div class="list-group mb-4">
                        <li class="list-group-item d-flex justify-content-between align-items-start">
                            <div class="ms-2 me-auto">
                            <div class="fw-bold">Docs</div>
                            <span class="smal text-muted">Guides & Examples</span>
                            </div>
                        </li>
                        <a href="/architecture" class="list-group-item list-group-item-action {% if request.uri.path == '/architecture' %}active{% endif %}">
                            Architecture
                        </a>
                        <a href="/custom-sender-strategy" class="list-group-item list-group-item-action {% if request.uri.path == '/custom-sender-strategy' %}active{% endif %}">
                            Custom Sender Strategy
                        </a>
                        <a href="/custom-receiver-strategy" class="list-group-item list-group-item-action {% if request.uri.path == '/custom-receiver-strategy' %}active{% endif %}">
                            Custom Receiver Strategy
                        </a>
                    </div>
                </div>
            </div>
        </div>
    {% endblock %}

    {% block footer %}
        {% include 'components/footer.html.twig' %}
    {% endblock %}
{% endblock %}
